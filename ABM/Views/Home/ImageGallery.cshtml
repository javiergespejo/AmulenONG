@model IEnumerable<ABM.ViewModels.HomePageImageViewModel>

@{
    ViewBag.Title = "ImageGallery";
}

<h2>ImageGallery</h2>

<p>
    @Html.ActionLink("Cargar Imagen", "UploadImage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EditDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EditDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            <img src="/Home/RetrieveImage/@item.Id" alt="" class="d-block w-50"/>
            @Html.ActionLink("Delete", "DeleteImage", new { id = item.Id })
        </td>
    </tr>
}

</table>
