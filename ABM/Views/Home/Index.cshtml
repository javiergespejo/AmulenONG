@model ABM.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>

    <div id="WelcomeText">
        <h1>@Html.DisplayFor(model => model.WelcomeText)</h1>

    </div>

    <div>
        
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.SliderImages.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.SliderImages.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img src="/Home/RetrieveImage/@Model.SliderImages.ElementAt(i).Id" alt="" class="d-block w-100"/>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="/Home/RetrieveImage/@Model.SliderImages.ElementAt(i).Id" alt="" class="d-block w-100"/>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <h2>Listado de projectos</h2>
    <table id="Projects">

        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Model => project.proyectName)
                </td>
            </tr>
        }

    </table>

    @if (Session["User"] == null)
    {
        <div style="margin-top: 20px">
            <a class="btn btn-primary btn-lg" href="/User/Login"> Iniciar Sesión </a>
        </div>
    }
    @if (Session["User"] == null)
    {
        <div style="margin-top: 20px">
            <a class="btn btn-primary btn-lg" href="/User/Create"> Crear Usuario </a>
        </div>
    }
</body>
</html>
