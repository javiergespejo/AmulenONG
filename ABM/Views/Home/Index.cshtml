@model ABM.ViewModels.HomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Amulen</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Mansalva|Roboto&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/Template/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/Content/Template/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Template/css/animate.min.css">
    <link rel="stylesheet" href="~/Content/Template/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/Template/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/Template/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/Template/fonts/flaticon-1/font/flaticon.css">
    <link rel="stylesheet" href="~/Content/Template/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/Template/css/style.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v8.0" nonce="WrPOJ87o"></script>
    <!-- NAVBAR -->
    <div class="site-wrap" id="home-section">

        <div class="bg-primary site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top py-3 ">
                <div class="container-fluid">
                    <!-- LOGO / HOME -->
                    <a class="navbar-brand" href="#"><img width="50" src="~/Content/Template/images/AmulenLogo3.png" /></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- NAVBAR ITEMS -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link " href="#sobrenosotros">Sobre nosotros<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link " href="#proyectos">Proyectos</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link " href="#trabajoenred">Trabajo en red</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link " href="#contacto">Cómo llegar</a>
                            </li>
                        </ul>
                        <!-- LOGIN -->
                        <form class="form-inline my-2 my-lg-0 text-black">
                            <!-- NO USER SESSION -->
                            @if (Session["User"] == null)
                            {
                                <a href="../User/Login" class="btn btn-danger btn-sm my-2 my-sm-0 btn-space text-black">Ingresar</a>
                            }
                            <!-- ADMIN SESSION -->
                            @if (Session["isAdmin"] != null && Session["User"] != null)
                            {
                                <a href="../User/Admin" class="btn btn-danger btn-sm my-2 my-sm-0 btn-space text-black">Administrar</a>
                            }
                            <!-- USER SESSION -->
                            @if (Session["User"] != null)
                            {
                                <a href="../User/LogOff" class="btn btn-danger btn-sm my-2 my-sm-0 btn-space text-black">Cerrar sesión</a>
                            }
                        </form>
                    </div>
                </div>
            </nav>
        </header>

        <!-- SLIDER IMAGES, WELCOME TEXT AND "CONTRIBUIR" BUTTON -->
        <div class="owl-carousel-wrapper">
            <div class="box-92819">
                <a class="center"><img width="300" src="~/Content/Template/images/AmulenLogo5.png" /></a>
                <br /><p><a href="#donar" class="btn btn-primary center">Contribuir</a></p>
            </div>
            <div class="owl-carousel owl-1 ">
                @for (int i = 0; i < Model.SliderImages.Count(); i++)
                {
                    <div class="ftco-cover-1 overlay" style="background-image: url('../Home/RetrieveImage/@Model.SliderImages.ElementAt(i).Id');"></div>
                }
            </div>
        </div>

        <!-- OVERLAY IMAGES AMULEN ACTIVITIES -->
        <div class="container">
            <div class="center">
                <p class="center text-cursive h1 text-center">@Model.WelcomeText</p>
                &nbsp;
                <div class="feature-29192-wrap d-md-flex" style="margin-top: -20px; position: relative; z-index: 2;">

                    <a class="feature-29192 overlay-success" style="background-image: url('/Content/Template/images/Amulen6.jpg');">
                        <div class="text">
                            <h3 class="text-cursive text-white texto-sombra h1">Talleres</h3>
                        </div>
                    </a>

                    <a class="feature-29192 overlay-warning" style="background-image: url('/Content/Template/images/Amulen5.jpg');">
                        <div class="text">
                            <h3 class="text-cursive text-white texto-sombra h1">Ecoarte</h3>
                        </div>
                    </a>

                    <div class="feature-29192 overlay-danger" style="background-image: url('/Content/Template/images/Amulen7.jpg');">
                        <div class="text">
                            <h3 class="text-cursive text-white texto-sombra h1">Junin Recicla</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AMULEN QUEST -->
        <div class="site-section row pt-5 mt-5 text-center">
            <div class="col-md-12">
                <h2 class="title text-cursive text-pr">Nuestra misión</h2>
                <p>Favorecer procesos de inclusión social y laboral para jóvenes y adultos con capacidades diferentes.</p>
            </div>
        </div>

        <!-- LIST OF PROJECTS -->
        <div id="proyectos" class="bg-image overlay site-section" style="background-image: url('/Content/Template/images/Amulen7.jpg');">
            <div class="container">
                <div class="heading-20219">
                    <h2 class="title text-white mb-4 text-cursive">Por qué elegirnos</h2>
                    <p class="text-white">
                        El trabajo es un rasgo que define la existencia humana. Es el medio de sustento
                        y de satisfacción de las necesidades básicas. Pero es también una actividad por la que los
                        individuos afirman su identidad, para sí mismos/as y para aquellos/as que los rodean.<br />Es
                        crucial para la elección individual, el bienestar de las familias y la estabilidad de las
                        sociedades.
                    </p>
                    <hr />
                    &nbsp;
                </div>
                <div class="row text-white">
                    @foreach (var item in Model.Projects)
                    {
                        <div class="col-sm-3">
                            <h3 class="text-white">@Html.DisplayFor(modelItem => item.proyectName)</h3>
                        </div>
                        <div class="col-sm-9">
                            <p>@Html.DisplayFor(modelItem => item.proyectDetail)</p>
                            <hr />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- SENTENCE -->
    <div class="site-section">
        <div class="container">
            <div class="heading-20219 mb-5">
                <div class="d-md-flex cta-20101 align-self-center bg-light p-5">
                    <h2 class="title text-cursive text-center">
                        Creemos posible convocar a la sociedad en su conjunto para
                        sostener y construir espacios como el del taller productivo AMULEN, lugar de encuentro diario y
                        significativo por ser lugar de trabajo, de derecho y de dignidad.
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- UPDATES -->
    <div class="site-section" id="novedades">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4 text-center">
                    <h1 class="text-black mb-3 center text-cursive text-center">Novedades</h1>
                </div>
                <div class="col-sm-4">
                </div>
            </div>
        </div>

        <!-- GOOGLE MAPS -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4 text-center">
                    <div class="fb-page" data-href="https://www.facebook.com/amulen.tallerproductivo" data-tabs="timeline" data-width="375" data-height="" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="false"><blockquote cite="https://www.facebook.com/amulen.tallerproductivo" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/amulen.tallerproductivo">Amulen Taller Productivo</a></blockquote></div>
                </div>
                <div class="col-sm-4">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4 text-center">
                    <p>
                        <br />
                        <br />
                        Podes conocer más novedades en nuestro <a href="https://www.facebook.com/amulen.tallerproductivo" target="_blank">Facebook</a>!
                    </p>
                </div>
            </div>


        </div>
    </div>

    <!-- CONTRIBUTION -->
    <div class="site-section bg-image overlay-primary" style="background-image: url('/Content/Template/images/Amulen2.jpg');" id="donar">
        <div class="container">
            <div class="row align-items-stretch">
                <div class="col-md-6">
                    <img src="~/Content/Template/images/Amulen2.jpg" alt="Image" class="img-fluid shadow img-thumbnail">
                </div>
                <div class="col-md-6">
                    <div class="bg-white h-100 p-4 shadow">
                        <h3 class="mb-4 text-cursive">Contribuí con Amulen!</h3>
                        <p>
                            Las donaciones que recibe Amulen nos permiten sumar y/o mantener recursos, tanto materiales como humanos,
                            a las causas por las cuales trabajamos día a día.
                        </p>
                        <p>Si deseas realizar un aporte económico, te dejamos aquí debajo un enlace para donar:</p>

                        @Html.Action("showDonationButtons", "Admin")
                        <br><br>
                        <p>Si deseas aportar tu ayuda con acciones, contactanos en redes sociales con los siguientes enlaces:</p>
                        <a href="https://www.facebook.com/amulen.tallerproductivo">
                            <img src="~/Content/Template/images/Facebook-Logo.png"
                                 width="100">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- NEWSLETTER -->
    <div class="site-section">
        <div class="container">
            <div class="mb-5">
                <h2 class="footer-heading mb-4">Suscríbete a nuestras noticias</h2>
                <form action="#" method="post" class="footer-suscribe-form">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control rounded-0 border-secondary text-white bg-transparent"
                               placeholder="Ingrese su correo electrónico" aria-label="Enter Email" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary text-white" type="button" id="button-addon2">Suscribir</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ABOUT US -->
    <div class="site-section" id="sobrenosotros">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4">
                </div>
                <div class="col-4">
                    <h1 class="text-black mb-3 center text-cursive text-center">Sobre nosotros</h1>
                    <p>
                        Estas secciones han sido nombradas de forma provisoria, de la misma manera que están en la página de Amulen
                        hoy en día.
                    </p><br>
                    <p>Serán modificadas en un futuro al planificar de forma más eficiente el contenido</p>
                </div>
                <div class="col-4">
                </div>

            </div>
        </div>
    </div>

    <!-- WORK NETWORK -->
    <div class="site-section" id="trabajoenred">
        <div class="container-fluid">
            <div class="row">

                <div class="col-4"></div>
                <div class="col-4">
                    <h1 class="text-black mb-3 center text-cursive text-center">Trabajo en red</h1>

                </div>
            </div>
        </div>
    </div>

    <!-- HOW TO GET -->
    <div class="site-section" id="contacto">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4">
                </div>
                <div class="col-4">
                    <h1 class="text-black mb-3 center text-cursive text-center">Cómo llegar</h1>
                </div>
                <div class="col-4">
                </div>
            </div>
        </div>

        <!-- GOOGLE MAPS -->

        <div class="container-fluid">
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3059.216308586211!2d-71.06966568417761!3d-39.93655097942374!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x96119bdb582529c7%3A0x9c9bbf1ae33ce62d!2sAsociaci%C3%B3n%20Civil%20Taller%20Productivo%20Amul%C3%A9n!5e0!3m2!1ses-419!2sar!4v1602606672404!5m2!1ses-419!2sar" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="site-footer bg-white">
        <div class="container">
            <div class="row pt-5 mt-5 text-center">
                <div class="col-md-12">
                    <div class="pt-5">
                        <p>Cortesía del equipo #SharpGuys de Alkemy, para Amulen <i class="icon-heart text-danger" aria-hidden="true"></i></p>
                        <p>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Content/Template/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Template/js/popper.min.js"></script>
    <script src="~/Content/Template/js/bootstrap.min.js"></script>
    <script src="~/Content/Template/js/owl.carousel.min.js"></script>
    <script src="~/Content/Template/js/jquery.sticky.js"></script>
    <script src="~/Content/Template/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/Template/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/Template/js/jquery.fancybox.min.js"></script>
    <script src="~/Content/Template/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/Template/js/aos.js"></script>

    <script src="~/Content/Template/js/main.js"></script>
</body>

</html>

