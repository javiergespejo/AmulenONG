@model IEnumerable<ABM.ViewModels.ProyectViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-5">
            <h4 class="page-title">Panel de projectos</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Proyectos</li>
                        <li class="breadcrumb-item" aria-current="page">Administracion</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
</div>

<br />
<h2>Panel de administracion de proyectos</h2>
<p>En este panel se administran los proyectos, se puede ver los detalles de los mismos, editar y eliminar.</p>


<hr />
<p>
    @Html.ActionLink("Crear nuevo proyecto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectDetail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDetail)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                <!-- Button trigger modal -->

                <div>
                    <span id="confirmDeleteSpan_@item.Id" style="display:none">
                        <span>Esta seguro que desea eliminar?</span>
                        <button onclick="location.href='@Url.Action("Delete", "Proyect", new { id = item.Id })'" class="btn btn-danger">Eliminar</button>
                        <a href="#deleteSpan_@item.Id" class="btn btn-primary"
                           onclick="confirmDelete('@item.Id', false)">Cancelar</a>
                    </span>

                    <span id="deleteSpan_@item.Id">
                        <a href="#deleteSpan_@item.Id" class="btn btn-danger"
                           onclick="confirmDelete('@item.Id', true)">Eliminar</a>
                    </span>
                </div>
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/Custom/confirm-delete.js"></script>
