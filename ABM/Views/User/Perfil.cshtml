@model ABM.ViewModels.UserViewModel

@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-5">
            <h4 class="page-title">Mi perfil</h4>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Usuarios</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mi perfil</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <center class="m-t-30">
                            <img src="~/Content/AdminPanel/assets/images/users/1.jpg"
                                 class="rounded-circle" width="150" />
                            <h4 class="card-title m-t-10">@Html.DisplayFor(modelItem => Model.Name)</h4>
                            <h6 class="card-subtitle">Administrador</h6>


                        </center>
                    </div>
                    <div>
                        <hr>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">Email </small>
                        <h6>@Html.DisplayFor(modelItem => Model.Email)</h6>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material">
                            <div class="form-group">
                                <label class="col-md-12">Nombre completo</label>
                                <div class="col-md-12">
                                    @Html.DisplayFor(modelItem => Model.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    @Html.DisplayFor(modelItem => Model.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Usuario</label>
                                <div class="col-md-12">
                                    @Html.DisplayFor(modelItem => Model.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="button" value="Actualizar perfil" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Edit", "User", new { id = Model.Id }) + "'");" />

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>
</div>