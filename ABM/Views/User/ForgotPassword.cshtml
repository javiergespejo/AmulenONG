
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Recuperacion de contraseña</h2>

<p>Por favor ingrese el mail de su cuenta, un mail sera enviado con instrucciones para recuperar su cuenta</p>

@using (Html.BeginForm("ForgotPassword", "User"))
{
    <div class="form-horizontal">
        <hr />
        @if (@ViewBag.Message != null)
        {
            <div class="alert alert-dark" role="alert">
                @ViewBag.Message
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Ingrese mail: </label>
            <input type="text" id="providedEmail" name="providedEmail" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </div>
    </div>
}